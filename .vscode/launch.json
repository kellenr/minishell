{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "(gdb) Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/minishell",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,   
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build minishell",
        "miDebuggerPath": "/usr/bin/gdb",
        "logging": {
          "trace": true,
          "traceResponse": true,
          "engineLogging": true,
          "programOutput": true,
          "exceptions": true
        }
      }
    ]
}